{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "extends": "@xenous/tsconfig/base.json",
    "compilerOptions": {
        "lib": [
            "ES2022",
            "dom",
            "dom.iterable"
        ],
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "~/env": [
                "./env"
            ],
            "~/public/*": [
                "./public/*"
            ],
            "~/*": [
                "./src/*"
            ]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "module": "esnext"
    },
    "include": [
        ".",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
