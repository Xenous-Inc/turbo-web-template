{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "xenous",
    "private": true,
    "engines": {
        "node": ">=22.11.0",
        "pnpm": "^9.15.4"
    },
    "packageManager": "pnpm@9.15.4",
    "scripts": {
        "prepare": "git config core.hooksPath .git-hooks || echo 'Not in a git repo'",
        "clean": "git clean -xdf node_modules",
        "clean:workspaces": "turbo clean",
        "db:push": "turbo -F @xenous/db push",
        "db:studio": "turbo -F @xenous/db studio",
        "dev": "turbo watch dev --continue",
        "dev:next": "turbo watch dev -F @xenous/nextjs...",
        "build": "turbo build",
        "format-and-lint": "turbo run format-and-lint --continue",
        "format-and-lint:fix": "turbo run format-and-lint --continue -- --write",
        "lint:ws": "pnpm dlx sherif@latest",
        "ci": "turbo run ci --continue",
        "postinstall": "pnpm lint:ws",
        "typecheck": "turbo run typecheck",
        "ui-add": "turbo run ui-add",
        "rename": "bash ./rename.sh"
    },
    "devDependencies": {
        "@biomejs/biome": "catalog:",
        "@turbo/gen": "^2.3.1",
        "@xenous/biome-config": "workspace:*",
        "turbo": "^2.3.1",
        "typescript": "catalog:"
    }
}
